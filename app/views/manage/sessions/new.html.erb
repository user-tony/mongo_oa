<script type="text/javascript">
	runAllForms();

	$(function() {
		// Validation
		$("#new_user").validate({
			// Rules for form validation
			rules : {
				email : {
					required : true,
					email : true
				},
				password : {
					required : true,
					minlength : 3,
					maxlength : 20
				}
			},

			// Messages for form validation
			messages : {
				email : {
					required : '请输入邮箱地址',
					email : '请输入正确邮箱'
				},
				password : {
					required : '请输入密码'
				}
			},

			// Do not change code below
			errorPlacement : function(error, element) {
				error.insertAfter(element.parent());
			}
		});
	});
</script>
