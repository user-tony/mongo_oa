= link_to t(:show), record, class: 'btn btn-xs btn-default' if can?(:show, record)
= link_to t(:copy), new_manage_role_path(id: record.id) , class: 'btn btn-xs btn-default' if can?(:create, record)
= link_to t(:edit), [:edit, record], class: 'btn btn-xs btn-default' if can?(:create, record)
= link_to t(:destroy), record, method: 'delete', data: { confirm: t('confirm') }, class: 'btn btn-xs btn-default' if can?(:destroy, record)
