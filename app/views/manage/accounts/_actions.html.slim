= link_to t('show'), record, class: 'btn btn-xs btn-default'
= link_to t('copy'), new_manage_account_path(id: record.id), class: 'btn btn-xs btn-default' if can?(:create, record)
= link_to t('edit'), [:edit, record], class: 'btn btn-xs btn-default' if can?(:update, record)
= link_to t('destroy'), record, method: 'delete', data: { confirm: t('confirm') }, class: 'btn btn-xs btn-default' if can?(:destroy, record)
